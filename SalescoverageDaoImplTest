String batchName = batchFileMap.entrySet()
    .stream()
    .filter(entry -> entry.getValue()
        .stream()
        .anyMatch(metadata ->
            metadata.getFilename().equals(target.getDocumentName())
            && metadata.getTargetLanguage().equalsIgnoreCase(target.getTargetLanguage())
            && metadata.getSourceContentId().equals(target.getSourceContentId())
        )
    )
    .findFirst()
    .map(Map.Entry::getKey)
    .orElse("Unknown Batch");
